 Author:
    Annaleah Ernst
 -->

<launch>
    <!-- Set up mappings for the localization package -->
    <remap from="mobile_base/sensors/imu_data" to="imu_data" />
    <remap from="mobile_base/odom" to="odom" />
    <remap from="mono_odometer/image" to="/camera/rgb/image_raw"/>
    <remap from="mono_odometer/odometry" to="/vo"/>

    <!-- Launch Turtlebot -->
    <include file="$(find turtlebot_bringup)/launch/minimal.launch" />
    <include file="$(find turtlebot_bringup)/launch/3dsensor.launch" />
    
    <!-- Launch visual odometry package -->
    <include file="visual_odometry.launch.xml" />
    
    <!-- Launch localization package -->
    <include file="robot_pose_ekf.launch.xml">
        <arg name="use_vo" value="true" />
    </include>
</launch>